<div class="container my-4">
  <h1>Task Details</h1>

  <p><strong>Title:</strong> <%= @task.title %></p>
  <p><strong>Details:</strong> <%= @task.details %></p>
  <p><strong>Completed:</strong>
    <% if @task.completed %>
      <i class="fas fa-check-square text-success"></i> Yes
    <% else %>
      <i class="far fa-square text-muted"></i> No
    <% end %>
  </p>

  <div class="mt-3">
    <%= link_to "Delete", task_path(@task), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    <%= link_to "Back to List", tasks_path, class: "btn btn-secondary" %>
  </div>
</div>

